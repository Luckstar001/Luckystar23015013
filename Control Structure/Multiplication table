number = float(input("please input a number for the multiplication table: "))
if number <= 0:
    print("Please enter a positive integer.")
else:
    print(f"Multiplication table for {number}:")
    for i in range(1, 13):
        product = number * i
        print(f"{number} x {i} = {product}")



